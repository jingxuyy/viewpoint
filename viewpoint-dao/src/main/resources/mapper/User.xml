<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xu.viewpoint.dao.UserDao">
    <insert id="addUser" useGeneratedKeys="true" keyProperty="id">
        insert into
            t_user(
               phone,
               email,
               password,
               salt,
               createTime
             )
        values (
            #{user.phone},
            #{user.email},
            #{user.password},
            #{user.salt},
            #{user.createTime}
            )
    </insert>
    <insert id="addUserInfo">
        insert into
            t_user_info(
                userId,
                nick,
                gender,
                birth,
                createTime,
                avatar,
                sign
        )
        values (
            #{userInfo.userId},
            #{userInfo.nick},
            #{userInfo.gender},
            #{userInfo.birth},
            #{userInfo.createTime},
            #{userInfo.avatar},
            #{userInfo.sign}
        )
    </insert>
    <update id="updateUser">
        update
            t_user
        set
            <if test="user.password != null and user.password != ''">
                password = #{user.password},
            </if>
            <if test="user.phone != null and user.phone != ''">
                phone = #{user.phone},
            </if>
            <if test="user.email != null and user.email != ''">
                email = #{user.email},
            </if>
            updateTime = #{user.updateTime}
        where
            id = #{user.id}
    </update>

    <select id="getUserByPhone" resultType="com.xu.viewpoint.dao.domain.User">
        select
            *
        from
            t_user
        where
            phone = #{phone}
    </select>
    <select id="getUserById" resultType="com.xu.viewpoint.dao.domain.User">
        select
            *
        from
            t_user
        where
            id = #{id}
    </select>
    <select id="getUserInfoById" resultType="com.xu.viewpoint.dao.domain.UserInfo">
        select
            *
        from
            t_user_info
        where
            userId = #{userId}
    </select>
    <select id="getUserByPhoneOrEmail" resultType="com.xu.viewpoint.dao.domain.User">
        select
            *
        from
            (select concat(phone, ifnull(email,'')) as pe, u.*
             from t_user u ) tmp
        where
            tmp.pe like concat('%', #{phoneOrEmail}, '%')
    </select>
    <select id="getUserInfoByUserIds" resultType="com.xu.viewpoint.dao.domain.UserInfo">
        select
            *
        from
            t_user_info
        <where>
            <if test="ids != null and ids.size > 0">
                userId in
                <foreach collection="ids" item="userId" index="index" open="(" close=")" separator=",">
                    #{userId}
                </foreach>
            </if>
        </where>

    </select>
</mapper>